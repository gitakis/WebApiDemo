  "RequestResponseLogger": {
    "IsEnabled": true,
    "Name": "Web.Api",
    "DateTimeFormat": "yyyy-MM-dd HH:mm:ss"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal",
        "Microsoft.AspNetCore": "Fatal",
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Fatal",
        "Microsoft.Hosting.Lifetime": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Message}{NewLine}",
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Your ASP.NET Core App"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=PC;Database=WebAPIDemo;TrustServerCertificate=True;User ID=sa;Password=Sapassword01!;"
